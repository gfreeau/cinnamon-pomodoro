{
    "head_durations": {
        "type": "header",
        "description": "Durations (minutes)"
    },
    
    "pomodoro_duration": {
        "type": "scale",
        "default": 25,
        "min": 1,
        "max": 60,
        "step": 1,
        "description": "Pomodoro Duration:  "
    },

    "short_break_duration": {
        "type": "scale",
        "default": 5,
        "min": 1,
        "max": 12,
        "step": 1,
        "description": "Short Break Duration:  "
    },
    
    "long_break_duration": {
        "type": "scale",
        "default": 15,
        "min": 1,
        "max": 36,
        "step": 1,
        "description": "Long Break Duration:  "
    },

    "head_options": {
        "type": "header",
        "description": "Options"
    },
    
    "show_countdown_timer" : {
        "type" : "checkbox",
        "description" : "Show Countdown Timer on Panel",
        "default" : true
    },

    "show_notification_messages" : {
        "type" : "checkbox",
        "description" : "Show Notification Messages",
        "default" : true
    },

    "show_dialog_messages" : {
        "type" : "checkbox",
        "description" : "Show Dialog Messages",
        "default" : true
    },

    "sound_notifications" : {
        "type" : "checkbox",
        "description" : "Sound Notifications",
        "default" : true
    },
    
    "timer_sound" : {
        "type" : "checkbox",
        "description" : "Timer Sound",
        "default" : false
    },
    
    "timer_sound_file" : {
        "type" : "filechooser",
        "description" : "Timer Sound",
        "default" : "EggTimer.ogg",
        "select-dir" : false,
        "dependency" : "timer_sound"
    }
}

